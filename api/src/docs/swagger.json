            "example": "Produk berkualitas"
          },
          "image_url": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "url"
            },
            "example": [
              "https://res.cloudinary.com/xxx/image.png"
            ]
          },
          "category_name": {
            "type": "string",
            "example": "Kaos"
          }
        }
      }
    }
